echo -e "${BLUE}ðŸŒŠ NOAA Maritime Navigation Chatbot â›µ${NC}"
echo -e "${CYAN}================================================${NC}"
echo ""

# Check for Python
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}Error: Python 3 is not installed.${NC}"
    exit 1
fi

# Check for boto3
if ! python3 -c "import boto3" 2>/dev/null; then
    echo -e "${GREEN}Installing boto3...${NC}"
    pip3 install boto3
fi

# Launch chatbot
echo -e "${GREEN}Starting chatbot...${NC}"
echo ""
python3 maritime-chatbot.py

